      }
    }
  }
  #socios {
    display: flex;
    gap: 2%;
    margin-bottom: $margen-abajo;
    align-items: center;
    @include cel {
      flex-wrap: wrap;
      .logos {
        border-left: none !important;
        flex-wrap: wrap !important;
        img {
          flex: 0 1 auto !important;
          width: 22% !important;
        }
      }
    }
    h3 {
      flex: 0 1 20%;
    }
    .logos {
      flex: 1 1 auto;
      // border-left: solid 1px $cafe;
      display: flex;
      align-items: center;
      justify-content: space-between;
      img {
        flex: 0 1 5%;
        padding: 1rem;
        width: 10%;
      }
    }
