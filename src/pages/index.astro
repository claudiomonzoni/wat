---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  titulo="Wat design Arquitectura"
  descripcion="Servicios de diseño y construcción arquitectonico en Ixtapa Zihuatanejo"
>
  <main>
    <Nav />
    <div id="hero" class="bandeja">
      <div class="logohome">
        <img
          src="/img/wat-isotipo-home.svg"
          alt="Servicios de diseño arquitectonico en Ixtapa Zihuatanejo"
        />
      </div>
      <div class="conte">
        <h1>ARQUITURA <span>EN ZIHUATANEJO</span></h1>
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. <b
            >Neque magnam necessitatibus</b
          >voluptatibus ullam rem dignissimos? <br />
          <a href="#" class="cta"
            >conoce wat design <img
              src="/img/flecha.svg"
              alt="conoce wat design en zihuatanejo"
            /></a
          >
        </p>
      </div>
    </div>

    <div id="navega-home" class="bandeja">
      <div class="nave">
        <h2>PROYECTOS</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. <b
            >Fuga in assumenda</b
          > officia?
        </p>
        <a href="#" class="cta"
          >todos los proyectos <img
            src="/img/flecha.svg"
            alt="ver proyectos de wat zihuatanejo"
          /></a
        >
      </div>
      <div class="nave">
        <h2>SERVICIOS</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. <b
            >Fuga in assumenda</b
          > consectetur adipisicing elit
        </p>
        <a href="#" class="cta"
          >ver servicios <img
            src="/img/flecha.svg"
            alt="ver proyectos de wat zihuatanejo"
          /></a
        >
      </div>
    </div>

    <div id="socios" class="bandeja">
      <h3>SOCIOS ESTRATEGICOS</h3>
      <div class="logos">
        <img src="/img/logos/logo1.svg" alt="logo 1" />
        <img src="/img/logos/logo2.svg" alt="logo 2" />
        <img src="/img/logos/logo3.svg" alt="logo 3" />
        <img src="/img/logos/logo4.svg" alt="logo 4" />
        <img src="/img/logos/logo5.svg" alt="logo 5" />
      </div>
    </div>

    <Footer />
  </main>
</Layout>

<style lang="scss">
  @import "../estilos/_variables.scss";
  #hero {
    padding: $margen-abajo 0;
    text-align: center;
    .conte {
      text-align: left;
      display: flex;
      gap: 2%;
      padding: 2rem $margen-abajo;
      margin-top: $margen-abajo;
      align-items: center;
      justify-content: center;
      @include cel {
        flex-wrap: wrap;
        padding: 2rem 0;
        h1 {
          text-align: left !important;
        }
      }

      h1 {
        flex: 1 0 50%;
        text-align: right;
      }
      p {
        flex: 1 0 50%;
        .cta {
          margin-top: 1rem;
        }
      }
    }
  }

  #navega-home {
    border-top: solid 1px $cafe;
    display: flex;
    gap: 2%;
    @include cel {
      flex-wrap: wrap;
    }
    .nave {
      flex: 1 0 49%;
      margin: $margen-abajo 0;
      @include cel {
        &:first-child {
          margin: $margen-abajo 0 0 0;
        }
      }

      p {
        margin-bottom: 1rem;
      }
    }
    .nave:first-child {
      border-right: solid 1px $cafe;
      @include cel {
        border-right: none;
      }
    }
  }
  #socios {
    display: flex;
    gap: 2%;
    margin-bottom: $margen-abajo;
    align-items: center;
    @include cel {
      flex-wrap: wrap;
      .logos {
        border-left: none !important;
        flex-wrap: wrap !important;
        img {
          flex: 0 1 auto !important;
          width: 22% !important;
        }
      }
    }
    h3 {
      flex: 0 1 20%;
    }
    .logos {
      flex: 1 1 auto;
      // border-left: solid 1px $cafe;
      display: flex;
      align-items: center;
      justify-content: space-between;
      img {
        flex: 0 1 5%;
        padding: 1rem;
        width: 10%;
      }
    }
  }
</style>


