</style>
<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  const random = gsap.utils.random(-100, 100);
  let tl = gsap.timeline({ repeat: 0 });
  tl.delay(2)

  tl.from("#logo path", {
    stagger: {
      amount: 1,
      from: "random",
    },
    x: "random",
    rotate: random,
    scaleY: 2,
    scaleX: 2,
    transformOrigin: "top",
    ease: "Power1.easeOut",
    opacity: 0,
    duration: 0.4,
  });
  tl.from(" .conte > h1, .conte > p", {
    stagger: {
      amount: 1,
    },
    delay: -.5,
    y: 100,
    opacity: 0,
  });

