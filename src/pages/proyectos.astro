<style lang="scss">
  @import "../estilos/_variables.scss";
  #hero-int {
    display: flex;
    justify-content: center;
    align-items: center;
    @include cel {
      flex-wrap: wrap;
      .conte {
        .bandeja {
          transform: translateY(0%) !important;
          margin-top: 2rem;
        }
      }
      img {
        flex: 0 1 80% !important;
      }
    }
    h2 {
      color: $azul;
      font-size: clamp(1.3rem, 2vw, 2rem);
      font-weight: lighter;
    }
    .conte {
      flex: 1 0 50%;
      .bandeja {
        width: 70%;
        transform: translateY(-20%);
      }
    }
    img {
      padding-top: 2vh;
      width: 50%;
      height: auto;
      @include cel {
        padding-left: 2rem;
        padding-bottom: 2rem;
        width: 100%;
      }
    }
  }

  #proyectos {
    transform: translateY(-10%);
    @include cel{
  transform: translateY(0%);
}
  .proyecto {
      margin: 0 auto;
      margin-bottom:-20%; 
      display: grid;
      grid-template-columns: 1fr 1fr;
      width:70%;
      @include cel {
        display: block;
        margin-bottom: 2rem;
        width:90%;
      }
      div:first-child {
        order: 0;
      }
      color: #fff;
      h2 {
        color: $dorado;
        font-size: clamp(1.1rem, 1.9vw, 1.5rem);
      }
      .ima {
        width: 100%;
        height: 50%;    
        @include cel{
          img{
            margin-bottom: -4px;
            aspect-ratio:1/1.2;
          }

        }
      }
      img {
        aspect-ratio: 1/1;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .contenido {
        background: $azul;
        padding: 2rem;
      }
      &:nth-child(2n + 0) {
        // transform: translateY(-40%);    
        @include cel{
          transform: translateY(0%);     
        }   
        .lado:first-child{
          order: 1;
          z-index: 100;
        }
        .lado:last-child{
          pointer-events:none;
          order: 0;
          z-index: -1;
          @include cel{
            display:none;
          }
        }
      }
    }
  }
</style>
