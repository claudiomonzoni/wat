<style lang="scss">
  @import "../estilos/_variables.scss";
  #hero-int > .conte {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 2rem;
    @include cel {
      flex-wrap: wrap;
    }
    .izq,
    .der {
      display: inherit;
      flex: 1 0 50%;
      align-items: center;
    }
    .izq {
      .bandeja {
        width: 50%;
      }
    }
    .der {
      justify-content: end;
    }
    h1 {
      color: $azul;
      font-size: clamp(1.5rem, 2vw, 1.7rem);
      font-weight: lighter;
    }
    h2 {
      font-size: clamp(4.2rem, 6vw, 5.5rem);
      font-weight: bolder;
    }
  }
  #integrantes {
    display: flex;
    justify-content: center;
  }
  .recuadro-cafe {
    background-color: $cafe !important;
    color: #fff;
    padding: 1rem;
    h2 {
      color: $dorado !important;
    }
  }
  #col {
    width: 50%;
    columns: 2;
    column-gap: 0;
    @include cel {
      width: 100%;
    }
  }
  .recuadro > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  #logo {
    height: 30vh;
    display: flex;
    justify-content: center;
    align-items: center;
    break-inside: avoid-column;
    img {
      width: 50%;
      height: auto;
    }
  }
  #contacto {
    margin-bottom: 20vh;
    .cubeta {
      padding: 1rem;
      height: 29vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      align-content: center;
      h2,
      p {
        flex: 1 0 100%;
      }
    }
    input,
    textarea {
      width: 100%;
      background-color: $azul;
      color: #fff;
      padding: 0.5rem;
      border: none;
      margin-top: 0.3rem;
      font-size: 0.8rem;
      &::placeholder {
        color: #fff !important;
      }
    }
    button {
      border: none;
      background-color: $azul;
      color: #fff;
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }
  .bio {
    background-color: $azul;
    color: #fff;
    padding: 2rem;

    p {
      margin-bottom: 1rem;
      &:last-child {
        margin-bottom: 0rem;
      }
    }
    h2 {
      color: #fff;
      font-size: clamp(1.2rem, 2vw, 1.5rem);
      font-weight: bold;
    }
  }
  ul {
    padding: 1rem;
    a {
      color: #fff;
    }
  }
  li {
    list-style: disc;
    padding-top: 1rem;
    &:first-child {
      padding-top: 0;
    }
  }
  #map {
    height: 37vh;
  }
  #talento {
    background: url("/img/bg-talento.png") no-repeat;
    background-size: cover;
    margin: 6rem 0;
  }
  #talento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    @include cel {
      grid-template-columns: repeat(1, 1fr);
      grid-template-rows: auto;
      .vacio {
        height: 0vh !important;
      }
    }
    .recuadro {
      display: flex;
      justify-content: center;
      align-items: center;
      @include cel {
        height: 40vh;
        &:last-child{
          img{order: 1;}
          p{order: 2; }
        }
      }
      .conte {
        width: 80%;
      }
      &:first-child {
        p {
          padding: 0 !important;
        }
      }
      p {
        padding: 0 1.5rem;
        @include cel {
          padding: 2rem;
        }
      }
    }
    .blanco {
      background-color: hsla(0, 0%, 100%, 0.5);
    }
  }
</style>

<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
  integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ=="
  crossorigin=""
/>
<script src="/leaflet.js" is:inline></script>

<script define:vars={{ lat, lang }}>
  var map = L.map("map").setView([lat, lang], 17);
  L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
    attribution:
      '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
  }).addTo(map);
  var circle = L.circle([lat, lang], {
    color: "#5C728F",
    fillColor: "#5C728F",
    fillOpacity: 0.5,
    radius: 20,
  }).addTo(map);

</script>
<script>
   import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline({ repeat: 0 });
  tl.delay(2);

  tl.from(" .init > .ref", {
    stagger: {
      amount: .2,
    },
    y: 100,
    opacity: 0,
    ease: "Power1.easeOut",
  });


  tl.from(".der", {
    y: "50",
    // rotate: random,
    // scaleY: 2,
    // scaleX: 2,
    transformOrigin: "top",
    ease: "Power1.easeOut",
    opacity: 0,
    duration: 0.7,
  });

  gsap.registerPlugin(ScrollTrigger);
  const proyectos = document.querySelectorAll(".int");
  // For each images with class "animate-image" on page
  proyectos.forEach((el) => {
    let tl = gsap.timeline({
      scrollTrigger: {
        trigger: el,
        start: "left center",
        // toggleActions: "play none none reverse",
      },
    });

    tl.set(el, { transformOrigin: "top center" }).from(el, {
      opacity: 0,
      scale: 0.9,
      y: "+=20",
    });
  });
</script>